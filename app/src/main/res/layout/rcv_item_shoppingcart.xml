<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_rcv_spc_product"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_1"
            app:shapeAppearanceOverlay="@style/roundimageview" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@id/img_rcv_spc_product"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rcv_spc_title"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:text="Airpods Wirreless Bluetooth Headphones" />

            <TextView
                android:id="@+id/tv_rcv_spc_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="$89,99"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bt_minus_shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/minus_product" />

                <TextView
                    android:id="@+id/tv_num_shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="01" />

                <ImageView
                    android:id="@+id/bt_plus_shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/plus_product" />

                <ImageView
                    android:id="@+id/bt_cancel_shopping_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:src="@drawable/ic_cancel" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>